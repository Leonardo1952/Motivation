<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view_phrases_menu"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/purple"
       />

    <ImageView
        android:id="@+id/image_all"
        android:src="@drawable/ic_all"
        app:tint="@color/white"
        android:layout_marginStart="32dp"
        android:layout_alignTop="@id/view_phrases_menu"
        android:layout_alignBottom="@id/view_phrases_menu"
        android:layout_width="45dp"
        android:layout_height="45dp"
        />

    <ImageView
        android:id="@+id/image_happy"
        android:src="@drawable/ic_happy"
        app:tint="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_alignTop="@id/view_phrases_menu"
        android:layout_alignBottom="@id/view_phrases_menu"
        android:layout_width="45dp"
        android:elevation="5dp"
        android:layout_height="45dp"
        />

    <ImageView
        android:id="@+id/image_sunny"
        android:src="@drawable/ic_sunny"
        app:tint="@color/white"
        android:layout_marginEnd="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/view_phrases_menu"
        android:layout_alignBottom="@id/view_phrases_menu"
        android:layout_width="45dp"
        android:layout_height="45dp"
        />
    
    <TextView
        android:id="@+id/textview_name"
        android:layout_below="@id/view_phrases_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textSize="20sp"
        android:text="Olá, kotlin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/textview_phase"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_margin="8dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Olá, kotlinnnnnnnnnnnnn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <View
        android:layout_below="@id/textview_phase"
        android:layout_width="128dp"
        android:layout_centerHorizontal="true"
        android:background="@color/purple"
        android:layout_marginTop="16dp"
        android:elevation="5dp"
        android:layout_height="4dp"
        />

    <Button
        android:id="@+id/button_new_phrase"
        android:layout_width="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Nova frase"
        android:backgroundTint="@color/purple"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>